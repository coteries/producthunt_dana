<?xml version="1.0" encoding="utf-8"?>
<com.example.kianfar.producthunt_danakianfar.views.ProductHuntLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:orientation="horizontal"
    android:paddingBottom="20dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="40dp"
    android:weightSum="1">

    <Button
        android:id="@+id/button_upvote"
        style="@style/Product_ShortItem_Sidemargins"
        android:layout_width="50dp"
        android:layout_height="70dp"

        android:background="@color/grey"
        android:drawableTop="@drawable/ic_arrow_drop_up_black_24dp"
        android:padding="10dp"
        android:text="a"
        android:textSize="20sp" />

    <LinearLayout
        style="@style/Product_ShortItem_Sidemargins"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/text_product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Shark Repellent Bat Spray"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/text_product_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:text="Robin!! Fetch me the shark repellent bat spray!"
            android:textSize="16sp" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image_profile1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            android:padding="0dp"
            app:civ_border_color="@color/grey"
            app:civ_border_width="1dp" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image_profile2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="0dp"
            app:civ_border_color="@color/grey"
            app:civ_border_width="1dp"
            android:layout_marginLeft="5dp" />


        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image_profile3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:padding="0dp"
            app:civ_border_color="@color/grey"
            app:civ_border_width="1dp" />

    </FrameLayout>


</com.example.kianfar.producthunt_danakianfar.views.ProductHuntLayout>
