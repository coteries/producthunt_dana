<?xml version="1.0" encoding="utf-8"?>
<com.example.kianfar.producthunt_danakianfar.views.ProductHuntLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="horizontal"
    android:paddingBottom="20dp"
    android:paddingTop="20dp"
    android:weightSum="1">

    <Button
        android:id="@+id/button_upvote"
        style="@style/Product_ShortItem_Sidemargins"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight=".15"
        android:background="@color/grey"
        android:drawableTop="@drawable/ic_arrow_drop_up_black_24dp"
        android:padding="10dp"
        android:text="a"
        android:textSize="20sp" />

    <LinearLayout
        style="@style/Product_ShortItem_Sidemargins"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".67"
        android:orientation="vertical">


        <TextView
            android:id="@+id/text_product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Shark Repellent Bat Spray"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/text_product_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:text="Robin!! Fetch me the shark repellent bat spray!"
            android:textSize="16sp" />

    </LinearLayout>


    <!--<com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"-->
        <!--android:id="@+id/image_profile"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_weight=".2"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:riv_border_width="0dip"-->
        <!--android:src="@drawable/profile"-->
        <!--app:riv_mutate_background="true"-->
        <!--app:riv_oval="true"-->
        <!--app:riv_tile_mode="repeat" />-->


    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/image_profile"
    android:layout_width="0dp"
    android:layout_weight=".18"
    android:layout_height="wrap_content"
    app:civ_border_color="#FF000000"
    app:civ_border_width="0dp"
    android:padding="0dp"/>


</com.example.kianfar.producthunt_danakianfar.views.ProductHuntLayout>